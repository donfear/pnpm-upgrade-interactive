{
  "name": "pnpm-upgrade-interactive",
  "version": "1.0.4",
  "description": "Interactive CLI tool for upgrading pnpm dependencies with ease. Inspired by yarn upgrade-interactive. Supports monorepos, workspaces, and batch upgrades.",
  "main": "dist/index.js",
  "bin": {
    "pnpm-upgrade-interactive": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "prepare": "pnpm build",
    "link": "pnpm build && pnpm link --global",
    "version:patch": "pnpm version patch && git push && git push --tags",
    "version:minor": "pnpm version minor && git push && git push --tags",
    "version:major": "pnpm version major && git push && git push --tags",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "author": "Donfear",
  "keywords": [
    "pnpm",
    "upgrade",
    "interactive",
    "cli",
    "package-manager",
    "dependency-management",
    "yarn-upgrade-interactive",
    "monorepo",
    "workspace",
    "batch-upgrade"
  ],
  "license": "MIT",
  "homepage": "https://github.com/donfear/pnpm-upgrade-interactive#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donfear/pnpm-upgrade-interactive.git"
  },
  "bugs": {
    "url": "https://github.com/donfear/pnpm-upgrade-interactive/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/keypress": "^2.0.30",
    "@types/node": "^20.19.17",
    "@types/semver": "^7.7.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "inquirer": "^12.9.6",
    "keypress": "^0.2.1",
    "ora": "^9.0.0",
    "semver": "^7.7.2",
    "table": "^6.9.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
