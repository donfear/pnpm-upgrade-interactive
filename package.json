{
  "name": "pnpm-upgrade-interactive",
  "version": "1.0.1",
  "description": "Interactive upgrade tool for pnpm, inspired by yarn upgrade-interactive",
  "main": "dist/index.js",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
