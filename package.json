{
  "name": "pnpm-upgrade-interactive",
  "version": "1.3.8",
  "description": "Interactive CLI tool for upgrading pnpm dependencies with ease. Inspired by yarn upgrade-interactive. Supports monorepos, workspaces, and batch upgrades.",
  "main": "dist/index.js",
  "bin": {
    "pnpm-upgrade-interactive": "./dist/cli.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "prepare": "pnpm build",
    "link": "pnpm build && pnpm link --global",
    "version:patch": "pnpm version patch && git push && git push --tags",
    "version:minor": "pnpm version minor && git push && git push --tags",
    "version:major": "pnpm version major && git push && git push --tags",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "demo:record": "bash docs/demo/record-demo.sh",
    "demo:setup": "cd docs/demo-project && pnpm install"
  },
  "author": "Donfear",
  "keywords": [
    "pnpm",
    "upgrade",
    "interactive",
    "cli",
    "package-manager",
    "dependency-management",
    "yarn-upgrade-interactive",
    "monorepo",
    "workspace",
    "batch-upgrade"
  ],
  "license": "MIT",
  "homepage": "https://github.com/donfear/pnpm-upgrade-interactive#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donfear/pnpm-upgrade-interactive.git"
  },
  "bugs": {
    "url": "https://github.com/donfear/pnpm-upgrade-interactive/issues"
  },
  "files": [
    "dist/**/*.js",
    "README.md"
  ],
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/keypress": "^2.0.30",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.2.1",
    "keypress": "^0.2.1",
    "nanospinner": "^1.2.2",
    "semver": "^7.7.3",
    "undici": "^7.19.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316"
}
